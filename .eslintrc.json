{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-trailing-spaces": "error",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "no-unused-expressions": "error",
        "no-await-in-loop": "error",
        "import/prefer-default-export": 0,
        "linebreak-style": ["error", "windows"]
    }
}
